{
  "name": "barron-agency",
  "version": "1.1.0",
  "description": "Barron Agency Foundation - Complete UI Component System for Claims App",
  "created": "2024-11-23",
  "updated": "2025-12-01",
  "author": "Andrew Barron",
  "components": {
    "total": 34,
    "categories": {
      "presentational": [
        "Badge",
        "Button",
        "Card",
        "Input",
        "Select",
        "Skeleton",
        "Toast"
      ],
      "layout": [
        "AppLayout",
        "Footer",
        "Header",
        "PageHeader",
        "PageSection",
        "Sidebar",
        "TopBar"
      ],
      "dialogs": [
        "ConfirmationDialog",
        "Dialog",
        "DropdownMenu"
      ],
      "smart": [
        "ClaimDetailsCard",
        "ClaimForm",
        "ClaimListCard",
        "ClaimPDF",
        "ClaimStatusBadge",
        "ClaimStatusSelector",
        "DownloadClaimPDF",
        "FileGallery",
        "ItemCard",
        "ItemCardSkeleton",
        "ItemForm",
        "LoginForm",
        "PdfThumbnail",
        "PdfViewer",
        "SettingsForm",
        "ShareClaimButton"
      ],
      "utility": [
        "EmptyState"
      ]
    }
  },
  "icons": {
    "total": 20,
    "list": [
      "CancelIcon",
      "CheckIcon",
      "ChevronLeftIcon",
      "ChevronRightIcon",
      "CloseIcon",
      "DownloadIcon",
      "FileIcon",
      "FileTextIcon",
      "GripVerticalIcon",
      "HamburgerIcon",
      "HomeIcon",
      "LinkIcon",
      "LoadingIcon",
      "MenuIcon",
      "PlusIcon",
      "SaveIcon",
      "ShareIcon",
      "SpinnerIcon",
      "UploadIcon"
    ]
  },
  "hooks": [
    "useItems",
    "useAttachments"
  ],
  "themes": [
    "default",
    "client-a",
    "client-b",
    "christmas",
    "halloween"
  ],
  "utilities": [
    "cn (class merge)",
    "validations",
    "constants"
  ],
  "features": {
    "optimisticUI": true,
    "dragAndDrop": true,
    "fileUploads": true,
    "inlineEditing": true,
    "theming": true,
    "typescript": true,
    "responsive": true,
    "pdfGeneration": true,
    "publicSharing": true,
    "routeGroups": true
  },
  "dependencies": {
    "required": [
      "@tanstack/react-query",
      "clsx",
      "tailwind-merge"
    ],
    "optional": [
      "framer-motion",
      "react-dropzone",
      "@react-pdf/renderer",
      "sharp"
    ],
    "peer": [
      "react",
      "react-dom",
      "next",
      "tailwindcss"
    ]
  },
  "structure": {
    "components": "components/",
    "icons": "icons/",
    "styles": "styles/",
    "hooks": "hooks/",
    "utils": "utils/",
    "types": "types/",
    "config": "config/",
    "docs": "docs/"
  },
  "v1_1_features": {
    "pdfGeneration": {
      "components": ["ClaimPDF", "DownloadClaimPDF"],
      "api": "/api/claims/[id]/pdf",
      "docs": "docs/guides/PDFGeneration.md"
    },
    "publicSharing": {
      "components": ["ShareClaimButton"],
      "hooks": ["useShareLinks"],
      "api": ["/api/claims/[id]/share", "/api/share/[token]"],
      "docs": "docs/guides/PublicSharing.md"
    },
    "routeGroups": {
      "authenticated": "(app)/",
      "public": "(public)/",
      "docs": "docs/guides/RouteGroups.md"
    },
    "navigation": {
      "components": ["AppLayout", "TopBar", "Sidebar"],
      "docs": "docs/guides/Navigation.md"
    }
  }
}
